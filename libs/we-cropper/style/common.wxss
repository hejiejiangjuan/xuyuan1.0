.cropper-wrapper {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  background-color: #e5e5e5;
}

.cropper-buttons {
  width: 100vw;
  height: 50px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  line-height: 50px;
}

.cropper-buttons .upload, .cropper-buttons .getCropperImage {
  width: 50%;
  text-align: center;
}
